{
    "compilerOptions": {
        "esModuleInterop": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "es5",
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "app",
        "dist",
        "public"
    ],
    "include": [
        "server/**/*",
        "shared/**/*",
    ]
}